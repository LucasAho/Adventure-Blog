---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Lucas Asher";
const allTripReports = await Astro.glob("../pages/tripReports/*.md");
---

<BaseLayout pageTitle={pageTitle}>
	<h2 class="text-center">Author, mountaineer, and web developer</h2>
	<p class="px-5 mb-3">
		Hello! I am an alpinist and author from Colorado. I use this site to
		share my adventures, as well as the creative endeavors that I am most
		proud of.
	</p>
	<div
		id="image-carousel"
		class="carousel slide mx-auto carousel-sizing"
		data-bs-ride="carousel"
	>
		<div class="carousel-inner">
			<div class="carousel-item active" data-bs-interval="900">
				<img
					src="https://i.imgur.com/wn6Bybp.jpg"
					class="d-block w-100"
					alt="Mt. Whitney Summit"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/fMaEMnP.jpg"
					class="d-block w-100"
					alt="Sunlight Ridge"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/HXfhNf1.jpg"
					class="d-block w-100"
					alt="Shavano Sunrise"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/dxBPATM.jpg"
					class="d-block w-100"
					alt="Mt. Shasta Sunrise"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/JOybGyh.jpg"
					class="d-block w-100"
					alt="Mt. Russel Sunrise"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/dtWfWRr.jpg"
					class="d-block w-100"
					alt="Maroon Bells Landscape"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/AHRzE7A.jpg"
					class="d-block w-100"
					alt="Little Bear Ridge"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/EY0vSi8.jpg"
					class="d-block w-100"
					alt="Maroon Bells Sunrise"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/lWu1eXC.jpg"
					class="d-block w-100"
					alt="Little Bear Catwalk"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/nHXVUIw.jpg"
					class="d-block w-100"
					alt="Mt. Langely Summit"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/0bgrcUp.jpg"
					class="d-block w-100"
					alt="Split Couloir Pitch One"
				/>
			</div>
			<div class="carousel-item">
				<img
					src="https://i.imgur.com/Sx5qxC8.jpg"
					class="d-block w-100"
					alt="Crestone N. Buttress"
				/>
			</div>
		</div>
	</div>
	<h3 class="text-center my-3">Trip Reports</h3>
	<div class="container text-center">
		<div class="row justify-content-evenly align-items-start">
			<div class="col-md-6 col-sm-12">
				<a class="card-links" href={allTripReports[0].url}>
					<div class="card mx-auto tripReportCards">
						<img
							src={allTripReports[0].frontmatter.image.url}
							class="card-img-top"
							alt="Sneffel's N. Buttress"
						/>
						<div class="card-body">
							<h5 class="card-title">
								{allTripReports[0].frontmatter.title}
							</h5>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 col-sm-12">
				<a class="card-links" href={allTripReports[1].url}>
					<div class="card mx-auto tripReportCards">
						<img
							src={allTripReports[1].frontmatter.image.url}
							class="card-img-top"
							alt="Sneffel's N. Buttress"
						/>
						<div class="card-body">
							<h5 class="card-title">
								{allTripReports[1].frontmatter.title}
							</h5>
						</div>
					</div>
				</a>
			</div>
		</div>
	</div>
</BaseLayout>
<style>
	.card-links {
		text-decoration: none;
	}
	.carousel-sizing {
		width: 60%;
	}
	.tripReportCards {
		width: 100%;
	}
	@media screen and (max-width: 768px) {
		.carousel-sizing {
			width: 90%;
		}
		.tripReportCards {
			width: 100%;
		}
	}
</style>
