---

<div
    id="image-carousel"
    class="carousel slide mx-auto carousel-sizing pointer-event"
    data-bs-ride="carousel"
>
    <div class="carousel-inner">
        {
            carouselIMGs.map((img, i) => (
                <div>
                    {i !== 0 ? (
                        <div class="carousel-item">
                            <img
                                src={img.src}
                                class="d-block w-100"
                                alt={img.alt}
                            />
                        </div>
                    ) : (
                        <div
                            class="carousel-item active"
                            data-bs-interval="900"
                        >
                            <img
                                src={img.src}
                                class="d-block w-100"
                                alt={img.alt}
                            />
                        </div>
                    )}
                </div>
            ))
        }
    </div>
    <button
        class="carousel-control-prev opaque-buttons"
        type="button"
        data-bs-target="#image-carousel"
        data-bs-slide="prev"
    >
        <span class="visually-hidden">Previous</span>
    </button>
    <button
        class="carousel-control-next opaque-buttons"
        type="button"
        data-bs-target="#image-carousel"
        data-bs-slide="next"
    >
        <span class="visually-hidden">Next</span>
    </button>
</div>
<style>
    .opaque-buttons {
        opacity: 0%;
        background-color: gray;
        width: 20%;
    }
    .opaque-buttons:hover {
        opacity: 15%;
        background-color: gray;
    }
    .carousel-sizing {
        width: 65%;
    }
    @media screen and (max-width: 768px) {
        .carousel-sizing {
            width: 100%;
        }
        .opaque-buttons {
            opacity: 0%;
        }
        .opaque-buttons:hover {
            opacity: 0%;
        }
    }
</style>
